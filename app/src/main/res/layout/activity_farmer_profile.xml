<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FarmerProfile"
    android:background="@drawable/green_light_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/imgg"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kunal Sarpal"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="@color/dark_green"
            android:elevation="20dp"/>

        <TextView

            android:background="@drawable/rectangleview"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A farmer from Punjab famous for organic farming."
            android:textSize="16sp"

            android:layout_marginTop="8dp"
            android:textColor="#555F61"
            android:elevation="20dp"/>

        <!-- Horizontal ScrollView for crops -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getprod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="See Products"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/dark_green"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Available Items"
            android:textColorHint="@color/dark_green"
            android:layout_marginTop="110dp"
            android:drawableLeft="@drawable/check"
            android:drawablePadding="10dp"
            android:textSize="30dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/button_border"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:elevation="20dp">

                <!-- Crop items -->
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rectangleview"
                    android:gravity="center"
                    android:text="Pulses"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:padding="16dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rectangleview"
                    android:gravity="center"
                    android:text="Grains"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:elevation="20dp"
                    />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rectangleview"
                    android:gravity="center"
                    android:text="Makki"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:elevation="20dp"/>

                <!-- Additional crops -->
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rectangleview"
                    android:gravity="center"
                    android:text="Fruits"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:padding="16dp" />

                <TextView
                    android:layout_width="150dp"
                    android:id="@+id/textView13"
                    android:layout_height="200dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rectangleview"
                    android:gravity="center"
                    android:text="Herbs"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:elevation="20dp"/>

                <!-- Add more items as needed -->

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
